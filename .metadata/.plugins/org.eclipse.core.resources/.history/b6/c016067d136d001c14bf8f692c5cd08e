package com.example.ts.profile.service;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.ts.profile.model.Profile;
import com.example.ts.profile.repository.ProfileRepository;

@Service
public class ProfileService {
	
	Logger log = LoggerFactory.getLogger(ProfileService.class);

	@Autowired
	ProfileRepository profileRepository;
	
	public Profile addProfile(Profile profile) {
		log.info("Adding new Profile");
		return profileRepository.save(profile);
	}
	
	public void deleteProfile(Integer profileId) {
		profileRepository.deleteById(profileId);
	}
	
	public Profile getProfile(String email, String password){
		return profileRepository.findProfileByEmailAndPassword(email, password);
	}
	
	public Profile findProfileById(Integer i){
		return profileRepository.findProfile(i);
	}
	
	public Profile updateProfileDetails(Profile profile) {
		int ident = profile.getProfileId();
		Profile prof = profileRepository.findProfile(ident);
	
		if(profileRepository.existsById(prof.getProfileId())) {
			prof.setAccountBal(profile.getAccountBal());
			prof.setCreditScore(profile.getCreditScore());
			prof.setNoOfTransaction(profile.getNoOfTransaction());
		}
		return prof;
	}
	
	public Profile updateProfileEmailAndPassword(Profile profile) {
		int ident = profile.getProfileId();
		Profile prof = profileRepository.findProfile(ident);
	
		if(profileRepository.existsById(prof.getProfileId())) {
			prof.setEmail(profile.getEmail());
			prof.setPassword(profile.getPassword());
		}
		return prof;
	}
	
		
	public void updateAccountBal(Profile profile, Double newBal) {
		profile.setAccountBal(newBal);		
	}
		
		
	}
	

